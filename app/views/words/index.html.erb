<h1>Listing words</h1>

<table>
  <thead>
    <tr>
      <th><%= current_user.lang_a.titleize %></th>
      <th><%= current_user.lang_b.titleize %></th>
      <th>Know</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.word_a %></td>
        <td><%= word.word_b %></td>
        <td><%= word.know %></td>
        <td><%= word.user_id %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

